<%= form_for :comment ,url: "/comments" do |f| %>
  
  <div class="field">
    <%= f.label :body %>
    <%= f.text_area(:body, size: '40x10') %>
  </div>
  <div class="field">
    <%= f.hidden_field :"user_id", :value => session[:user_id] %>
  </div>
  <div class="field">
    <%= f.hidden_field :"item_id", :value => item_id %>
  </div>

  <div class="actions field">
    <%= f.submit "SAVE" %>
  </div>
<% end %>
<button class="field hide-comment-form">HIDE</button>
